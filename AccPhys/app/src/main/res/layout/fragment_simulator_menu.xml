<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/simulator_menu_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".MainMenuFragments.SimulatorMenu">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/text_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Physics Simulations"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />

            <ImageView
                android:id="@+id/image_simulation"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/physics_diagram"
                android:scaleType="fitCenter"
                android:layout_marginBottom="24dp" />

            <Button
                android:id="@+id/button_free_fall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Free Fall Simulation" />

            <Button
                android:id="@+id/button_inclined_plane"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Inclined Plane Fall" />

            <Button
                android:id="@+id/button_moving_force"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Moving Under Force" />

        </LinearLayout>
    </ScrollView>

</FrameLayout>
